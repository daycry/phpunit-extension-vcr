{
    "name": "daycry/phpunit-extension-vcr",
    "description": "A library that allows you to easily use the PHP-VCR library in your PHPUnit tests.",
    "keywords": ["phpunit", "php-vcr", "tests", "testing", "vcr", "unit"],
    "license": "MIT",
    "authors": [
      {
        "name": "Daycry"
      }
    ],
    "require": {
      "php": "^8.1",
      "php-vcr/php-vcr": "^1.7"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "*",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.0 || ^11.0",
        "squizlabs/php_codesniffer": "^3.10"
    },
    "autoload": {
      "psr-4": {
        "Daycry\\PHPUnit\\Vcr\\": "src/"
      }
    },
    "autoload-dev": {
      "psr-4": {
        "Daycry\\PHPUnit\\Vcr\\Tests\\": "tests/"
      }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "post-update-cmd": [
            "bash admin/setup.sh"
        ],
        "analyze": [
            "Composer\\Config::disableProcessTimeout",
            "phpstan analyze",
            "rector process --dry-run"
        ],
        "ci": [
            "Composer\\Config::disableProcessTimeout",
            "@cs",
            "@test"
        ],
        "cs": "php-cs-fixer fix --ansi --verbose --dry-run --diff",
        "cs-fix": "php-cs-fixer fix --ansi --verbose --diff",
        "mutate": "infection --threads=2 --skip-initial-tests --coverage=build/phpunit",
        "sa": "@analyze",
        "style": "@cs-fix",
        "test": [
            "Composer\\Config::disableProcessTimeout",
            "vendor/bin/phpunit"
        ]
    }
  }
